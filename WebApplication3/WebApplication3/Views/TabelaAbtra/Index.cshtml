@model IEnumerable<WebApplication3.Models.TabelaAbtra>

@{
    ViewBag.Title = "Pessoas";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Usuario", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nome
        </th>
        <th>
            Sobrenome
        </th>
        <th>
            Data de Nascimento
        </th>
        <th>
            Sexo
        </th>
        <th>
            Endereço
        </th>
        <th>
            N°
        </th>
        <th>
            Telefone
        </th>
        <th>
            CEP
        </th>
        <th>
            Ficha Final de Casdastro
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sobrenome)
        </td>
        <td>
            @item.DataDeNascimento.ToShortDateString()
        </td>
        <td>
            @{
                if(item.Sexo == "F")
                {
                    <span>Feminino</span>
                }
                else
                {
                    <span>Masculino</span>
                }

            }

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereço)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CEP)
        </td>
        <td>
            @item.FichaDeCadastro.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CPF }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CPF }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.CPF })
        </td>
    </tr>
}

</table>
